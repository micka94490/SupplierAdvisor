<section class="container" id="searchBarSection">
  <h1 class="text-center my-4">Recherche</h1>
  <form class="text-center">
    <div class="form-group">
      <input type="text" class="form-control" required="required" id="supplier" placeholder="Ecrivez votre recherche ici... ">
    </div>
  </form>
</section>

<section class="container" id="searchResultSection" style="">
  <div class="row">
    <!-- Information générales -->
    <div class="col-md-6">
      <h2 class=""><%= @supplier.corporate_name %></h2>
      <p>SIRET :&nbsp;<%= @supplier.siret %></p>
    </div>

    <!-- MyProcurement -->
    <div class="col-md-6">
      <h2 class="">My procurement</h2>
      <div class="">
        <p>Statut :&nbsp;<%= @supplier.juridic_status %></p>
      </div>
    </div>

    <!-- Historique des commandes -->
    <div class="col-12">
      <h2 class="text-center">Historique des commandes</h2>
      <%= render 'pages/pages/history' %>
    </div>
  </div>
</section>
